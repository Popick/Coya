rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if validFile() && validSize();
    }
  }

  function validFile() {
    return request.resource.name.matches('.(jpg|jpeg|png|gif)$');
  }

  function validSize() {
    return request.resource.size < 5 * 1024 * 1024;
  }
}
